// ==UserScript==
// @name         WME Lane Tools - Delete Hidden Lanes
// @namespace    https://github.com/jm6087/
// @version      2020-05-19
// @description  Deletes hidden lanes on one-way segments so you don't have to convert lanes to two-way first
// @include      /^https:\/\/(www|beta)\.waze\.com\/(?!user\/)(.{2,6}\/)?editor\/?.*$/
// @exclude      https://www.waze.com/user/editor*
// @author       jm6087 (with lots of help from SkiDooGuy)
// @grant        none

function checkOppositeLanes() {
_.each(W.model.segments.getObjectArray(), (s) => {
  If (onScreen(s)) {
    const sAtts= s.getFeatureAttributes();
    const fwdDirection = s.sAtts.fwdDirection;
    const revDirection = s.sAtts.revDirection;
    const fwdLanes = s.sAtts.fwdLaneCount;
    const revLanes = s.sAtts.revLaneCounty;
    
    If (fwdLanes > 0 && fwdDirection = false) {
      highlight segemnt
   OR
    If (revLanes > 0 && revDirection = false) {
    highlight segemnt
   
   
function checkSelectedSegment () {
  const selObj = W.selectionManager.getSelectedFeatures();
  const selSeg = selObjs[0].model.attributes;
  const segFwdLanes = selSeg.fwdLaneCount;
  const segRevLanes = selSeg.revLaneCount;
  const segFwdDir = selSeg.fwdDirection;
  const segRevDir = selSeg.revDireciton;
  
  If (segFwdLanes > 0 && segFwdDir = False) {
    add button to allow deleting of lanes
  OR
  If (segRevLanes > 0 && segRevDir = False) {
    add button to allow deleting of lanes  
  
